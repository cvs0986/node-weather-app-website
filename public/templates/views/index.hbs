{{>header}}
{{>nav}}

<div class="container mb-5">
  <h1 class="weather-heading">Weather</h1>
  <hr>

  <div class="wet-section">
    <div class="row mt-4">
      <div class="col-md-5">
        <h4>Enter the location to get the weather data</h4>
        <form>
          <div class="form-group">
            <input type="text" class="form-control" id="forcast_location" aria-describedby="emailHelp"
              placeholder="Location">
            <small id="emailHelp" class="form-text text-muted"></small>
          </div>
          <button type="button" id="weatherBtn" class="btn">Get Weather</button>
        </form>
      </div>
      <div class="col-md-1"></div>
      <div class="col-md-6">
        <div class="card" style="width: 29rem;">
          <img class="card-img-top" src="../../assets/img/weather2.jpg" alt="Card image cap">
          <div class="card-body">
            <div class="weatherContent">
              <div class="row">
                <div class="col-md-12">
                  <h5 class="card-text" style="color:rgb(22, 54, 113); font-size: 14px; letter-spacing: 3px;">FORCAST</h5>
                  <p class="card-text" style="color:#782715;" id="forcastStr">--</p>
                </div>
              </div>
              <div class="row mt-4">
                <div class="col-md-6">
                  <h6 class="card-text" style="color:rgb(22, 54, 113); font-size: 14px; letter-spacing: 3px;">LOCATION</h6>
                  <p class="card-text" style="color:#782715;" id="locationStr">--</p>
                </div>
                <div class="col-md-6">
                  <h6 class="card-text" style="color:rgb(22, 54, 113); font-size: 14px; letter-spacing: 3px;">YOUR SEARCH</h6>
                  <p class="card-text" style="color:#782715;" id="placeStr">--</p>
                </div>
              </div>
            </div>
            <div class="pleaseWait">
              <p class="text-center text-success">
                Please Wait ..
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{>footer}}

  